{
  "name": "e-commerce-application",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prettier-check": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,scss}\" && prettier --list-different \"src/**/*.{ts,tsx,js,jsx,css,scss}\"",
    "pre-push": "eslint . && jest && validate-branch-name",
    "format": "prettier --write .",
    "ci:format": "prettier --check .",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-css-modules": "^2.1.0",
    "prettier": "3.2.5",
    "sass": "^1.76.0",
    "sass-loader": "^14.2.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "validate-branch-name": "^1.3.0",
    "vite": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-check",
      "pre-push": "npm run pre-push"
    }
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release|ECOM-\\d+(_\\w+)?)\\/?.+$",
    "errorMsg": "Error branch name"
  }
}
